<h1>Log in</h1>  
  
<%= form_tag sessions_path, :class => 'form-horizontal',:role => 'form' do %>
    <div class="form-group">
    <%= label_tag :email, nil, :class => 'col-lg-2 control-label',:for => 'inputEmail1' %>
      <div class="col-lg-10">
    <%= text_field_tag :email, params[:email], :class => 'form-control',:id => 'inputEmail1' %>
    </div>
    </div>
      <div class="form-group">
    <%= label_tag :password, nil, :class => 'col-lg-2 control-label',:for => 'inputPassword1' %>
        <div class="col-lg-10">
    <%= password_field_tag :password,nil,:class => 'form-control',:id => 'inputPassword1' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= submit_tag 'Submit', :class => 'btn btn-default'  %>
      </div>
    </div>
<% end %>  