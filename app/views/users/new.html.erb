<h1>Sign Up</h1>  
  
<%= form_for @user, :html => {:class => 'form-horizontal',:role => 'form'} do |f| %>
  <% if @user.errors.any? %>  
    <div class="error_messages alert alert-success">
      <!--<h2>Form is invalid</h2>  -->
      <ul>  
        <% for message in @user.errors.full_messages %>  
          <li><%= message %></li>  
        <% end %>  
      </ul>  
    </div>  
  <% end %>
    <div class="form-group">
        <%= f.label :email,{:class => 'col-lg-2 control-label',:for => 'inputEmail1'} %>
        <div class="col-lg-10">
         <%= f.text_field :username,{:class => 'form-control',:id => 'inputEmail1'} %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :password,{:class => 'col-lg-2 control-label',:for => 'inputPassword1'} %>
        <div class="col-lg-10">
            <%= f.password_field :password,{:class => 'form-control',:id => 'inputPassword1'} %>
        </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation,{:class => 'col-lg-2 control-label',:for => 'inputPassword1'} %>
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation,{:class => 'form-control',:id => 'inputPassword1'} %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit 'Submit', :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>  