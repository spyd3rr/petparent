<h1>Listing tips</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Message</th>
    <th>Reportflag</th>
    <th>User</th>
    <th>Venue</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tips.each do |tip| %>
  <tr>
    <td><%= tip.description %></td>
    <td><%= tip.message %></td>
    <td><%= tip.reportFlag %></td>
    <td><%= tip.user %></td>
    <td><%= tip.venue.name unless tip.venue.nil? %></td>
    <td><%= link_to 'Show', tip %></td>
    <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
    <td><%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

