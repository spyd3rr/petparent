    <!--<th>User</th>-->

   <!-- <th>Zip</th>-->
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= link_to event.name, edit_event_path(event) unless event.name.nil? %></td>
    <td><%= event.venue.name unless event.venue.nil? %></td>
    <td><%= event.address %></td>
    <!--<td><%#= event.address2 %></td>-->
    <!--<td><%#= event.city %></td>-->
