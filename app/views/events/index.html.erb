    <!--<td><%#= event.endDate %></td>-->
    <!--<td><%#= event.image %></td>-->

    <!--<td><%#= event.price %></td>-->
    <!--<td><%#= event.reportFlag %></td>-->

    <td><%= event.state %></td>
    <!--<td><%#= event.startDate unless event.startDate.nil? %></td>-->
    <td>
      <% e=Parse::Query.new("Event").eq("objectId", event.id).get.first %>
      <%= e["startDate"].to_time.localtime if e["startDate"] %>
    </td>
    <td><%= e["endDate"].to_time.localtime if e["endDate"] %></td>

    <!--<td><%#= event.event_tags %></td>-->
    <!--<td><%#= event.thumbnail %></td>-->
    <!--<td><%#= event.user %></td>-->

   <!-- <td><%#= event.zip %></td>-->
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @events %>

