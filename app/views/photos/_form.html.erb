<%= form_for @photo,:html => {:multipart => true, :role => 'form'}  do |f|%>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image %>
      <%= image_tag @photo.image,:class =>'img-circle',:size =>"50x40" %>
    </div>
    <div class="form-group">
      <%= f.label :thumbnail %>
      <%= f.file_field :thumbnail %>
      <%= image_tag @photo.image,:class =>'img-circle',:size =>"50x40" %>
    </div>
    <div class="form-group">
      <%= f.label :user %>
      <%= f.text_field :user,{:class => 'form-control',:placeholder => 'Enter user'} %>
    </div>
    <div class="form-group">
      <%= f.label :reportFlag %>
      <%= f.text_field :reportFlag,{:class => 'form-control',:placeholder => 'Enter report flag'} %>
    </div>
    <%= f.submit 'Submit', :class => 'btn btn-success' %>
  </div>
<% end %>
