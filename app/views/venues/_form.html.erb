<%= form_for @venue,:html => {:multipart => true, :role => 'form'} do |f| %>
    <% venue=@venue %>
  <% if @venue.errors.any? %>
    <div id="error_explanation" class="alert alert-warning">
      <h2><%= pluralize(@venue.errors.count, "error") %> prohibited this venue from being saved:</h2>

      <ul>
      <% @venue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div class="col-md-6">
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address,{:class => 'form-control',:placeholder => 'Enter address'} %>
  </div>
  <div class="form-group">
    <%= f.label :address2 %>
    <%= f.text_field :address2,{:class => 'form-control',:placeholder => 'Enter address2'} %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city,{:class => 'form-control',:placeholder => 'Enter city'} %>
  </div>
  <div class="form-group">
    <%= f.label :coordinate %>
    <div class="form-inline">
      <div class="form-group">
        <%= text_field_tag :latitude, (f.object.coordinate.latitude unless f.object.coordinate.nil?) , :size => '30',:class => 'form-control',:placeholder => 'Enter latitude' %>
      </div>
      <div class="form-group">
        <%= text_field_tag :longitude, (f.object.coordinate.longitude unless f.object.coordinate.nil?) , :size => '29',:class => 'form-control',:placeholder => 'Enter longitude' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description,{:class => 'form-control',:rows => "3",:placeholder => 'Enter description'} %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%#= f.text_field :image,{:class => 'form-control',:placeholder => 'Enter image'} %>
  </div>
 <%= f.submit 'Submit', :class => 'btn btn-success' %>
 </div>
 <div class="col-md-6">
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,{:class => 'form-control',:placeholder => 'Enter name'} %>
  </div>
  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone,{:class => 'form-control',:placeholder => 'Enter phone'} %>
  </div>
  <div class="form-group">
    <%= f.label :photos %>
    <%#= f.number_field :photos,{:class => 'form-control',:placeholder => 'photos'} %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.number_field :rating,{:class => 'form-control',:placeholder => 'Enter rating'} %>
  </div>
  <div class="form-group">
    <%= f.label :reportFlag %>
    <%= f.number_field :reportFlag,{:class => 'form-control',:placeholder => 'Enter reportFlag'} %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state,{:class => 'form-control',:placeholder => 'Enter address'} %>
  </div>
  <div class="form-group">
    <%= f.label :tags %>
    <%#= f.text_field :tags,{:class => 'form-control',:placeholder => 'Enter tags'} %>
  </div>
  <div class="form-group">
    <%= f.label :thumbnail %>
    <%#= f.text_field :thumbnail,{:class => 'form-control',:placeholder => 'Enter thumbnail'} %>
    <%#= image_tag f.object.thumbnail_url(:thumb) if f.object.thumbnail? %>
    <%#= f.file_field :thumbnail %>
  </div>
  <div class="form-group">
    <%= f.label :zip %>
    <%= f.text_field :zip,{:class => 'form-control',:placeholder => 'Enter zip'} %>
  </div>

 </div>
<% end %>
