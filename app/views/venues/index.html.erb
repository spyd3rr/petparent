<% @venues.each do |venue| %>
  <tr>
    <td><%= venue.address %></td>
    <td><%= venue.address2 %></td>
    <td><%= venue.city %></td>
    <td><% unless venue.coordinate.nil? %><%= venue.coordinate.latitude %><br><%= venue.coordinate.longitude %><% end %></td>
    <!--<td><%#= venue.description %></td>-->
    <!--<td><%#= venue.favoriteUsers %></td>-->
    <!--<td><%#= venue.image %></td>-->
    <td><%= venue.name %></td>
    <!--<td><%#= venue.phone %></td>-->
    <!--<td><%#= venue.photos %></td>-->
    <!--<td><%#= venue.rating %></td>-->
    <!--<td><%#= venue.reportFlag %></td>-->
    <!--<td><%#= venue.state %></td>-->
    <td><%= venue.venue_tags %></td>
    <td><%= image_tag venue.thumbnail %></td>
    <!--<td><%#= venue.tips %></td>-->
    <td><%= venue.zip %></td>
    <td><%= link_to 'Show', venue %></td>
    <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
    <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

